<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_layout"
    android:orientation="vertical"
    android:padding="5dp"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="348dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/calc" />

    <TextView
        android:id="@+id/calc_tv_calc"
        android:layout_width="match_parent"
        android:layout_height="227dp"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="2dp"
        android:layout_weight="1"
        android:background="@color/back_result"
        android:gravity="right|center_vertical"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="0"
        android:textColor="@color/background_layout"
        android:textSize="34sp" />

    <TextView
        android:id="@+id/calc_tv_result"
        android:layout_width="match_parent"
        android:layout_height="227dp"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="2dp"
        android:layout_weight="1"
        android:background="@color/back_result"
        android:gravity="right|center_vertical"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textColor="#13BC00"
        android:textSize="34sp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/calc_bt_AC"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@color/button_calc"
                android:text="AC"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                app:backgroundTint="@color/button_calc" />

            <Button
                android:id="@+id/calc_bt_hundred"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@color/button_calc"
                android:text="%"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                app:backgroundTint="@color/button_calc" />

            <Button
                android:id="@+id/calc_bt_backspace"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@color/button_calc"
                android:drawableLeft="@drawable/backspace"
                android:paddingLeft="27dp"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                app:backgroundTint="@color/button_calc" />

            <Button
                android:id="@+id/calc_bt_division"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@color/button_calc"
                android:text="/"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                app:backgroundTint="@color/button_calc" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/calc_bt_num7"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@color/button_number"
                android:text="7"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                app:backgroundTint="@color/button_number" />

            <Button
                android:id="@+id/calc_bt_num8"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@color/button_number"
                android:text="8"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                app:backgroundTint="@color/button_number" />

            <Button
                android:id="@+id/calc_bt_num9"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@color/button_number"
                android:text="9"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                app:backgroundTint="@color/button_number" />

            <Button
                android:id="@+id/calc_bt_multiplication"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@color/button_calc"
                android:text="*"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                app:backgroundTint="@color/button_calc" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/calc_bt_num4"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@color/button_number"
                android:text="4"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                app:backgroundTint="@color/button_number" />

            <Button
                android:id="@+id/calc_bt_num5"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@color/button_number"
                android:text="5"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                app:backgroundTint="@color/button_number" />

            <Button
                android:id="@+id/calc_bt_num6"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@color/button_number"
                android:text="6"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                app:backgroundTint="@color/button_number" />

            <Button
                android:id="@+id/calc_bt_subtraction"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@color/button_calc"
                android:text="-"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                app:backgroundTint="@color/button_calc" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/calc_bt_num1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@color/button_number"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                app:backgroundTint="@color/button_number" />

            <Button
                android:id="@+id/calc_bt_num2"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@color/button_number"
                android:text="2"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                app:backgroundTint="@color/button_number" />

            <Button
                android:id="@+id/calc_bt_num3"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@color/button_number"
                android:text="3"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                app:backgroundTint="@color/button_number" />

            <Button
                android:id="@+id/calc_bt_addition"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@color/button_calc"
                android:text="+"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                app:backgroundTint="@color/button_calc" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="4">

            <Button
                android:id="@+id/calc_bt_num0"
                android:layout_width="170dp"
                android:layout_height="30pt"
                android:layout_margin="2dp"
                android:layout_span="2"
                android:layout_weight="1"
                android:background="@color/button_number"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                app:backgroundTint="@color/button_number" />

            <Button
                android:id="@+id/calc_bt_dot"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_margin="2dp"
                android:layout_span="1"
                android:layout_weight="1"
                android:background="@color/button_number"
                android:text="."
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                app:backgroundTint="@color/button_number" />

            <Button
                android:id="@+id/calc_bt_equal"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_margin="2dp"
                android:layout_span="1"
                android:layout_weight="1"
                android:background="@color/button_equal"
                android:text="="
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                app:backgroundTint="@color/button_equal" />
        </TableRow>
    </TableLayout>

</LinearLayout>